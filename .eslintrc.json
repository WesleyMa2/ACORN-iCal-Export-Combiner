{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "comma-dangle": 0,
    "no-console": 0
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0",
      "flowVersion": "0.53"
    }
  }
}
